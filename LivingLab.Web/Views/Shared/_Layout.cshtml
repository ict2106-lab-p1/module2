<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Living Lab Dashboard</title>

    <link rel="stylesheet" href="~/dist/site.css" asp-append-version="true" />
    <link
            href="https://fonts.googleapis.com/css?family=Nunito+Sans:300,400,700,300italic,400italic,700italic&display=swap"
            rel="stylesheet"
            type="text/css"/>
    @* Replace the cdn with your style scripts *@
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div>
        <div class="leading-normal tracking-normal" id="main-body">
            <div class="flex flex-wrap">
                @* sidebar *@
                <div
                    class="w-1/2 md:w-1/3 lg:w-64 fixed md:top-0 md:left-0 h-screen lg:block bg-slate-900 border-r z-30"
                    id="main-nav">
                    <div
                        class="w-full h-20 flex px-4 pr-6 mt-24 lg:mt-8 items-center justify-center mb-8">
                        <a href="#">
                            @* logo here *@
                            <img
                                class="font-semibold text-3xl text-blue-400 pl-4 h-24"
                                @* src="" *@
                                alt="logo"/>
                        </a>
                    </div>
    
                    <div class="mb-4 px-4 space-y-1">
                        <ul class="relative">
                            <!--
                            <p class="pl-4 text-sm font-semibold mb-1 uppercase">Test</p>
                            -->
                            <a
                                class="w-full flex items-center text-sunset-400 h-10 pl-4 hover:bg-white rounded-lg cursor-pointer"
                                href="#">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                                </svg>
                                <span class="text-slate-50 hover:text-black">Dashboard</span>
                            </a>
    
                        <a
                            class="w-full flex items-center text-sunset-400 h-10 pl-4 hover:bg-gray-200 rounded-lg cursor-pointer"
                            href="#">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                            </svg>
                            <span class="text-gray-700">Visited</span>
                        </a>
                        <a class="w-full flex items-center text-sunset-400 h-10 pl-4 bg-gray-200 hover:bg-gray-200 rounded-lg cursor-pointer" href="@Url.Action("index", "dashboard")">  
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                            </svg>
                            <span class="text-gray-700">Dashboard</span> 
                        </a>  
                            <a
                                class="w-full flex items-center text-sunset-400 h-10 pl-4 bg-white hover:bg-white rounded-lg cursor-pointer"
                                href="#">
                                <span class="text-black hover:text-black">Compare Data</span>
                            </a>
                        
                            <a
                                class="w-full flex items-center text-sunset-400 h-10 pl-4 hover:bg-white rounded-lg cursor-pointer"
                                href="#">
                                <span class="text-slate-50 hover:text-black">Account Management</span>
                            </a>
                        
                            <a
                                class="w-full flex items-center text-sunset-400 h-10 pl-4 hover:bg-white rounded-lg cursor-pointer"
                                asp-area="" asp-controller="ManualLogs" asp-action="Index"
                                >
                                <span class="text-slate-50 hover:text-black">Data Logging</span>
                            </a>
                        
                            <a
                                class="w-full flex items-center text-sunset-400 h-10 pl-4 hover:bg-white rounded-lg cursor-pointer"
                                href="#">
                                <span class="text-slate-50 hover:text-black">My Logs</span>
                            </a>
                        
                            <li class="relative" id="sidenavEx1">
                                <a
                                    class="w-full flex items-center text-sunset-400 h-10 pl-4 hover:bg-white rounded-lg cursor-pointer"
                                    href="#">
                                    <span class="text-slate-50 hover:text-black">Settings</span>
                                    <svg aria-hidden="true" focusable="false" data-prefix="fas" class="w-3 h-3 ml-auto" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                                        <path fill="currentColor" d="M207.029 381.476L12.686 187.132c-9.373-9.373-9.373-24.569 0-33.941l22.667-22.667c9.357-9.357 24.522-9.375 33.901-.04L224 284.505l154.745-154.021c9.379-9.335 24.544-9.317 33.901.04l22.667 22.667c9.373 9.373 9.373 24.569 0 33.941L240.971 381.476c-9.373 9.372-24.569 9.372-33.942 0z"></path>
                                    </svg>
                                </a>
                                <ul class="relative accordion-collapse collapse" id="collapseSidenavEx1" aria-labelledby="sidenavEx1" data-bs-parent="#sidenavExample">
                                    <li class="relative">
                                        <a href="#!" class="flex items-center text-sunset-400 pl-12 pr-6 h-10 overflow-hidden text-slate-50 text-ellipsis whitespace-nowrap rounded-lg hover:bg-white hover:text-black transition duration-300 ease-in-out" data-mdb-ripple="true" data-mdb-ripple-color="dark">Notification</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>

                        <div class="col-span-1 h-96 flex flex-col justify-between">
                            <button
                                class="bg-transparent hover:bg-red-500 text-red-700 font-semibold hover:text-white py-2 px-4 border border-red-500 hover:border-transparent rounded shadow">
                                Logout
                            </button>
                        </div>
                        
                    </div>
                </div>
                
                @* end sidebar *@
    
                <div
                    class="w-full bg-gray-100 pl-0 lg:pl-64 min-h-screen"
                    id="main-content">
                    @* navbar start *@
                    <div class="sticky top-0 z-100">
                        <div
                            class="w-full h-20 px-6 bg-slate-900 border-b flex items-center justify-between">
    
                            <!-- right navbar -->
                            <div class="flex items-center relative">
                            <!--
                            <button
                                class="bg-transparent hover:bg-red-500 text-red-700 font-semibold hover:text-white py-2 px-4 border border-red-500 hover:border-transparent rounded shadow">
                                Logout
                            </button>
                            -->
                            </div>
                        </div>
                    </div>
                    @* navbar end *@
    
                    <div class="p-6 bg-gray-100 mb-20 h-auto">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
